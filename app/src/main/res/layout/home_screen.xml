<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/titlebar" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dp"
            android:text="조건 맞춤 추천 매물"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <ImageButton
            android:layout_width="374dp"
            android:layout_height="210dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:src="drawable/rectangle_9" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="19dp"
                android:text="월세 500/30"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="|"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="별점 4"
                android:textColor="@color/black" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="5dp"
            android:text="원룸, 4층, 관리비 7만"
            android:textSize="12sp" />

        <Button
            android:layout_width="374dp"
            android:layout_height="33dp"
            android:layout_gravity="center"
            android:layout_marginTop="7dp"
            android:background="@drawable/rectangle_10"
            android:text="더 많은 방 보기"
            android:textSize="16sp" />

        <ImageView
            android:layout_marginLeft="13dp"
            android:layout_width="385dp"
            android:layout_height="1dp"
            android:layout_marginTop="11dp"
            android:background="@drawable/center_line" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="20dp"
            android:text="지금 뜨는 주변 핫플"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <ImageButton
            android:layout_width="374dp"
            android:layout_height="210dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:src="@drawable/rectangle_9" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="19sp"
                android:text="음식점"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="|"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="별점 4.8"
                android:textColor="@color/black" />
        </LinearLayout>

        <Button
            android:layout_width="374dp"
            android:layout_height="33dp"
            android:layout_gravity="center"
            android:layout_marginTop="9dp"
            android:background="@drawable/rectangle_10"
            android:text="리뷰 보러가기"
            android:textSize="16sp" />

        <ImageView
            android:layout_marginLeft="13dp"
            android:layout_width="385dp"
            android:layout_height="1dp"
            android:layout_marginTop="11dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/center_line" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dp"
            android:text="실시간 인기 글"
            android:textColor="@color/black"
            android:textSize="28sp" />

        <ImageButton
            android:layout_width="382dp"
            android:layout_height="113dp"
            android:layout_gravity="center"
            android:layout_marginTop="14dp"
            android:src="@drawable/rectangle_43" />

        <ImageButton
            android:layout_width="382dp"
            android:layout_height="113dp"
            android:layout_gravity="center"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="39dp"
            android:src="@drawable/rectangle_43" />


        <include layout="@layout/navibar" />


    </LinearLayout>

</ScrollView>